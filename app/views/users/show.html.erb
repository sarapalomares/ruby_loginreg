<div class="container">
      <div class="row">
            <h3>Welcome, <%= @user.first_name.capitalize %>!</h3>

            <form action="/info/<%= @user.id %>" method="post">
                  <input name="authenticity_token" value="<%= form_authenticity_token %>" type="hidden">
                  <button type="submit" class="btn btn-info">Show Profile</button>
            </form>
      <hr>

      <h3>All Users</h3>
      <div class="users_all">
            <table class="table table-striped">
                  <thead>
                        <tr>
                              <th>First Name</th>
                              <th>Last Name</th>
                              <th>Email</th>
                        </tr>
                  </thead>
                  <tbody>
                        <% @users_all.each do |user| %>
                        <tr>
                              <td><%= user.first_name.capitalize %></td>
                              <td><%= user.last_name.capitalize %></td>
                              <td><%= user.email %></td>
                        </tr>
                        <% end %>
                  </tbody>
            </table>
      </div>
      <hr>

      <form action="/logout" method="post">
            <input name="authenticity_token" value="<%= form_authenticity_token %>" type="hidden">
            <button type="submit" class="btn btn-danger">Logout</button>
      </form>
</div>
